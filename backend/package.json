{
  "name": "pairlive-backend",
  "version": "1.0.0",
  "description": "PAIRLIVE Backend API - Server Node.js Berperforma Tinggi dengan ELARA Protocol",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --config jest.config.ts --watch",
    "test:coverage": "jest --config jest.config.ts --coverage",
    "test:ci": "jest --config jest.config.ts --ci --coverage --forceExit",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx src/database/seed.ts",
    "db:studio": "prisma studio",
    "elara:build": "cd elara && cargo build --release",
    "elara:test": "cd elara && cargo test --workspace"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/multipart": "^8.1.0",
    "@fastify/rate-limit": "^9.1.0",
    "fastify": "^4.25.2",
    "@prisma/client": "^5.8.1",
    "ioredis": "^5.3.2",
    "@sinclair/typebox": "^0.32.5",
    "zod": "^3.22.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.4",
    "bullmq": "^5.1.6",
    "@node-rs/helper": "^1.3.3",
    "dayjs": "^1.11.10",
    "nanoid": "^3.3.7",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.4.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.8.1",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
